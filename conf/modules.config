/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Config file for defining DSL2 per module options and publishing paths
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Available keys to override module options:
        ext.args   = Additional arguments appended to command in module.
        ext.args2  = Second set of arguments appended to command in module (multi-tool modules).
        ext.args3  = Third set of arguments appended to command in module (multi-tool modules).
        ext.prefix = File name prefix for output files.
----------------------------------------------------------------------------------------
*/

process {

    publishDir = [
        path: { "${params.outdir}/Intermediate/${task.process.tokenize(':')[-1].toLowerCase()}" },
        mode: params.publish_dir_mode,
        saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
    ]

    withName: FASTQC {
        ext.args = '--quiet'
        publishDir = [
            path: { "${params.outdir}/Intermediate/QC/FASTQC" },
            mode: params.publish_dir_mode,
            pattern : "*.{zip,html}"
        ]
    }

    withName: MERGE_OVERLAP_CHECK {
        publishDir = [
            path: { "${params.outdir}/TADA/QC/MergeCheck" },
            mode: params.publish_dir_mode,
            pattern : "*.tsv"
        ]
    }

    withName: OVERLAP_HEATMAP {
        
        publishDir = [
            [
                path: { "${params.outdir}/TADA/QC/Plots/" },
                mode: params.publish_dir_mode,
                pattern: "*.pdf"
            ],
            [
                path: { "${params.outdir}/Intermediate/PreQC/MergeCheck" },
                mode: params.publish_dir_mode,
                pattern: "*.RDS"
            ]
        ]
    }

    withName: PLOT_QUALITY_PROFILE {
        publishDir = [
            [
                path: { "${params.outdir}/TADA/QC/Plots/QualityProfile" },
                mode: params.publish_dir_mode,
                pattern: "*.pdf"
            ],
            [
                path: { "${params.outdir}/Intermediate/PreQC/QualityProfile" },
                mode: params.publish_dir_mode,
                pattern: "*.RDS"
            ]
        ]
    }

    withName: SHORT_READ_CUTADAPT {
            ext.args = { [
                // TODO: not sure why this one is being weird, but 
                // seems to trigger an error even though this is
                // cutadapt 5.0
                // "--json=${meta.id}.cutadapt.json",
                params.cutadapt_strict_match ? "--pair-filter=any" : "--pair-filter=both",
                "--report=minimal",
                "--max-ee ${[params.maxEE_for,params.maxEE_rev].max()}",
                params.trunc_for > 0 ? "-l ${params.trunc_for}" : "",
                params.maxN >= 0 ? "--max-n ${params.maxN}" : "",
                params.min_read_len ? "-m ${params.min_read_len}" : "-m 50",
                params.max_read_len != "Inf" ? "-M ${params.max_read_len}" : "",
                !meta.single_end && params.trunc_rev > 0 ? "-L ${params.trunc_rev}" : "",
                params.illumina_twocolor ? "--nextseq-trim=2" : "",
                "-g ${meta.for}",
                params.cutadapt_dovetail ? "-a ${meta.rev_rc} -n 2" : "",
                meta.single_end ? "" : "-G ${meta.rev}",
                !meta.single_end && params.cutadapt_dovetail ? "-A ${meta.for_rc}" : "",
                meta.single_end ? "" : "-p ${meta.id}.R2.filtered.fastq.gz",
            ].join(' ').trim() }
            ext.prefix = { "${meta.id}" }
            publishDir = [
                    path: { "${params.outdir}/Intermediate/cutadapt" },
                    mode: params.publish_dir_mode
                ]
    }

    withName: PACBIO_CUTADAPT {
        ext.args = { [
                // TODO: not sure why this one is being weird, but 
                // seems to trigger an error even though this is
                // cutadapt 5.0
                // "--json=${meta.id}.cutadapt.json",
                "--rc",
                "--report=minimal",
                "--max-ee ${[params.maxEE_for,params.maxEE_rev].max()}",
                // params.trunc_for > 0 ? "-l ${params.trunc_for}" : "",
                params.cutadapt_strict_match ? "-g ${meta.for}...${meta.rev_rc}" : "-a ${for_primer}...${rev_primer_rc}",
                params.maxN >= 0 ? "--max-n ${params.maxN}" : "",
                params.min_read_len ? "-m ${params.min_read_len}" : "-m 50",
                params.max_read_len != "Inf" ? "-M ${params.max_read_len}" : "",
                "--untrimmed-output ${meta.id}.untrimmed.fastq.gz",
            ].join(' ').trim() }
            ext.prefix = { "${meta.id}" }
            publishDir = [
                    path: { "${params.outdir}/Intermediate/cutadapt" },
                    mode: params.publish_dir_mode
                ]
    }

    withName: ILLUMINA_DADA2_FILTER_AND_TRIM {
        publishDir = [
            path: { "${params.outdir}/Intermediate/FilterAndTrim" },
            mode: params.publish_dir_mode
        ]
    }

    withName: PACBIO_DADA2_FILTER_AND_TRIM {
        publishDir = [
            path: { "${params.outdir}/Intermediate/FilterAndTrim" },
            mode: params.publish_dir_mode
        ]
    }

    withName: MERGE_TRIM_TABLES {
        publishDir = [
            path: { "${params.outdir}/Intermediate/Summary" },
            mode: params.publish_dir_mode
        ]
    }

    withName: DADA2_LEARN_ERRORS {
        publishDir = [
            [
                path: { "${params.outdir}/TADA/QC/Plots" },
                mode: params.publish_dir_mode,
                pattern: "*.pdf"
            ],
            [
                path: { "${params.outdir}/Intermediate/LearnErrors" },
                mode: params.publish_dir_mode,
                pattern: "*.RDS"
            ]
        ]
    }

    withName: ILLUMINA_DADA2_LEARN_ERRORS {
        publishDir = [
            [
                path: { "${params.outdir}/TADA/QC/Plots" },
                mode: params.publish_dir_mode,
                pattern: "*.pdf"
            ],
            [
                path: { "${params.outdir}/Intermediate/LearnErrors" },
                mode: params.publish_dir_mode,
                pattern: "*.RDS"
            ]
        ]
    }

    withName: PACBIO_DADA2_LEARN_ERRORS {
        publishDir = [
            [
                path: { "${params.outdir}/TADA/QC/Plots" },
                mode: params.publish_dir_mode,
                pattern: "*.pdf"
            ],
            [
                path: { "${params.outdir}/Intermediate/LearnErrors" },
                mode: params.publish_dir_mode,
                pattern: "*.RDS"
            ]
        ]
    }

    withName: DADA_INFER {
        publishDir = [
            path: { "${params.outdir}/Intermediate/DADA2" },
            mode: params.publish_dir_mode,
            pattern: "*.RDS"
        ]
    }

    withName: POOLED_SEQTABLE {
        publishDir = [
            path: { "${params.outdir}/Intermediate/SeqTable" },
            mode: params.publish_dir_mode,
            pattern: "*.RDS"
        ]
    }

    withName: DADA2_REMOVE_CHIMERAS {
        publishDir = [
            path: { "${params.outdir}/Intermediate/RemoveChimeras" },
            mode: params.publish_dir_mode,
            pattern: "*.RDS"
        ]
    }

    withName: RENAME_ASVS {
        publishDir = [
            path: { "${params.outdir}/Intermediate/Rename_ASVs" },
            mode: params.publish_dir_mode,
            pattern: "*"
        ]
    }

    withName: MMSEQS_CREATEDB {
        publishDir = [
            path: { "${params.outdir}/Intermediate/MMSeqs/Database" },
            mode: params.publish_dir_mode,
            pattern: "*"
        ]
    }

    withName: MMSEQS_EASYSEARCH {
        ext.args = { 
            params.mmseqs_args ?: '--start-sens 1 --sens-steps 3 -s 7 --max-accept 5 --format-output "query,target,pident,alnlen,mismatch,gapopen,qstart,qend,tstart,tend,qcov,tcov,evalue,bits"' }
        ext.prefix = { meta2.id }
        publishDir = [
            path: { "${params.outdir}/TADA/Text/SequenceFilter/" },
            mode: params.publish_dir_mode,
            pattern: "*.tsv"
        ]
    }

    withName: MMSEQS_DATABASE_FILTER {
        publishDir = [
            [
            path: { "${params.outdir}/TADA/Text/SequenceFilter/" },
            mode: params.publish_dir_mode,
            pattern: "*.ids"
            ]
        ]
    }

    withName: FILTER_TADA_DATA {
        publishDir = [
            [
            path: { "${params.outdir}/Intermediate/SeqFiltered" },
            mode: params.publish_dir_mode,
            pattern: "readmap*.RDS"
            ],        
            [
            path: { "${params.outdir}/Intermediate/SeqFiltered" },
            mode: params.publish_dir_mode,
            pattern: "seqtab*.RDS"
            ],
            [
            path: { "${params.outdir}/Intermediate/SeqFiltered/" },
            mode: params.publish_dir_mode,
            pattern: "*.fna"
            ]
        ]
    }

    withName: DADA2_ASSIGN_TAXA_SPECIES {
        publishDir = [
            path: { "${params.outdir}/Intermediate/AssignTaxa" },
            mode: params.publish_dir_mode,
            pattern: "*.RDS"
        ]
    }

    withName: DADA2_TAXFILTER {
        publishDir = [
            path: { "${params.outdir}/Intermediate/TaxFiltered" },
            mode: params.publish_dir_mode,
            pattern: "*"
        ]
    }

    withName: DECIPHER {
        publishDir = [
            path: { "${params.outdir}/TADA/Text/FASTA" },
            mode: params.publish_dir_mode,
            pattern: "asvs.aligned.fna"
        ]
    }

    withName: PHANGORN {
        publishDir = [
            path: { "${params.outdir}/Intermediate/Tree" },
            mode: params.publish_dir_mode,
            pattern: "*.RDS"
        ]
    }

    withName: FASTTREE {
        publishDir = [
            path: { "${params.outdir}/TADA/Text/Tree" },
            mode: params.publish_dir_mode,
            pattern: "unrooted*.newick"
        ]
    }

    withName: ROOT_TREE {
        publishDir = [
            [
                path: { "${params.outdir}/TADA/R" },
                mode: params.publish_dir_mode,
                pattern: "*.RDS"
            ],
            [
                path: { "${params.outdir}/TADA/Text/Tree" },
                mode: params.publish_dir_mode,
                pattern: "rooted*.newick"
            ],            
        ]
    }

    withName: READ_TRACKING {
        publishDir = [
                path: { "${params.outdir}/TADA/QC/ReadTracking" },
                mode: params.publish_dir_mode,
                pattern: "readtracking.csv"
            ]
    }

    withName: PLOT_MERGED_HEATMAP {
        publishDir = [
            [
                path: { "${params.outdir}/TADA/QC/Plots" },
                mode: params.publish_dir_mode,
                pattern: "*.pdf"
            ],
            publishDir = [
                path: { "${params.outdir}/Intermediate/QC" },
                mode: params.publish_dir_mode,
                pattern: "*.RDS"
            ]
        ]
    }

    withName: PLOT_ASV_DIST {
        publishDir = [
            [
                path: { "${params.outdir}/TADA/QC/Plots" },
                mode: params.publish_dir_mode,
                pattern: "*.pdf"
            ],
            publishDir = [
                path: { "${params.outdir}/Intermediate/QC" },
                mode: params.publish_dir_mode,
                pattern: "*.RDS"
            ]
        ]
    }

    withName: DADA2_READMAP2ASV {
        publishDir = [
            path: { "${params.outdir}/TADA/Text/FASTA" },
            mode: params.publish_dir_mode,
            pattern: 'asvs.fna'
        ]
    }

    withName: DADA2_SEQTABLE2TEXT {
        publishDir = [
            [
                path: { "${params.outdir}/Intermediate/Seqtable2Text" },
                mode: params.publish_dir_mode,
                pattern: 'seqtab.qiime2.txt'
            ],
            [
                path: { "${params.outdir}/TADA/Text/TSV" },
                mode: params.publish_dir_mode,
                pattern: 'seqtab.txt'
            ],
            [
                path: { "${params.outdir}/TADA/R" },
                mode: params.publish_dir_mode,
                pattern: 'seqtab.RDS'
            ]
        ]
    }

    withName: DADA2_TAXTABLE2TEXT {
        publishDir = [
            [
                path: { "${params.outdir}/TADA/Text/TSV" },
                mode: params.publish_dir_mode,
                pattern: 'taxtab.txt'
            ],
            [
                path: { "${params.outdir}/TADA/R" },
                mode: params.publish_dir_mode,
                pattern: "tax*.RDS"
            ]
        ]
    }

    withName: BIOM {
        publishDir = [
            path: { "${params.outdir}/TADA/Text/BIOM" },
            mode: params.publish_dir_mode,
            pattern: '*.biom'
        ]
    }

    withName: QIIME2_FEATURETABLE {
        publishDir = [
            path: { "${params.outdir}/TADA/QIIME2" },
            mode: params.publish_dir_mode,
            pattern: '*.{qza,qzv}'
        ]
    }

   withName: QIIME2_TAXTABLE {
        publishDir = [
            path: { "${params.outdir}/TADA/QIIME2" },
            mode: params.publish_dir_mode,
            pattern: '*.{qza,qzv}'
        ]
    }

   withName: QIIME2_SEQUENCE {
        publishDir = [
            path: { "${params.outdir}/TADA/QIIME2" },
            mode: params.publish_dir_mode,
            pattern: '*.{qza,qzv}'
        ]
    }

   withName: QIIME2_ALIGNMENT {
        publishDir = [
            path: { "${params.outdir}/TADA/QIIME2" },
            mode: params.publish_dir_mode,
            pattern: '*.{qza,qzv}'
        ]
    }

   withName: QIIME2_TREE {
        publishDir = [
            path: { "${params.outdir}/TADA/QIIME2" },
            mode: params.publish_dir_mode,
            pattern: '*.{qza,qzv}'
        ]
    }

    withName: SESSION_INFO {
        publishDir = [
            path: { "${params.outdir}/TADA/Text/Session" },
            mode: params.publish_dir_mode,
            pattern: '*.Rmd'
        ]
    }

    withName: CUSTOM_DUMPSOFTWAREVERSIONS {
        publishDir = [
            path: { "${params.outdir}/pipeline_info" },
            mode: params.publish_dir_mode,
            pattern: '*_versions.yml'
        ]
    }

    withName: MULTIQC {
        ext.args   = { params.multiqc_title ? "--title \"$params.multiqc_title\"" : '' }
        publishDir = [
            path: { "${params.outdir}/TADA/QC/MultiQC" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }

}
